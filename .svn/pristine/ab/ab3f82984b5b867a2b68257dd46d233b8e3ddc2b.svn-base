<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard_fragment.VoyageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/start"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <EditText
                        android:id="@+id/txtstart"
                        android:hint="@string/start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:clickable="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/end"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <EditText
                        android:id="@+id/txtend"
                        android:hint="@string/end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/dater"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <EditText
                        android:id="@+id/txtdate"
                        android:hint="@string/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:inputType="date"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/hour"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <EditText
                        android:id="@+id/txthourD"
                        android:hint="@string/hourD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/houra"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <EditText
                        android:id="@+id/txthourA"
                        android:hint="@string/hourA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/fonction"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spfonction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fonction"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/place"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <EditText
                        android:id="@+id/nbreplace"
                        android:hint="@string/place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/moneey"
                        android:layout_weight="0.1"
                        android:tint="@color/skyblue"/>

                    <EditText
                        android:id="@+id/price"
                        android:hint="@string/cout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/btnconfirm"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="22dp"
            android:background="@drawable/circlebutton"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:backgroundTint="@color/skyblue"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_weight="0.8"/>

    </LinearLayout>
</RelativeLayout>