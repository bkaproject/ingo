<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ongo"
            android:padding="4dp" />

        <TextView
            android:id="@+id/trajet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imglogo"
            android:text="Logbessou (carrefour) - BonabÃ©ri (Ndobo)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/lnDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trajet"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/imglogo">

            <TextView
                android:id="@+id/dateTimeTravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="22 Deceembre 2016"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnDateTime"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imglogo"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="En cours de traitement ..."
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/separate3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver"/>

</LinearLayout>